@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<main class="pt-6 px-8">
    <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
        <div class="inline-block min-w-full py-2 sm:px-6 lg:px-8">
            <table class="min-w-full text-center">
                <thead class="border-b font-medium dark:border-neutral-500">
                    <tr>
                        <th scope="col" class="px-6 py-2">
                            Date
                        </th>
                        <th scope="col" class="px-6 py-2">
                            Priority
                        </th>
                        <th scope="col" class="px-6 py-2">
                            Code
                        </th>
                        <th scope="col" class="px-6 py-2">
                            Message
                        </th>
                        <th scope="col" class="px-6 py-2">
                            Model
                        </th>
                        <th scope="col" class="px-6 py-2"></th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach(var errorHistory in Model.ErrorHistories)
                        {
                            <tr class="border-b dark:border-neutral-500">
                                <td class="whitespace-nowrap px-6 py-2">
                                    @errorHistory.OccurredAt
                                </td>
                                <td class="whitespace-nowrap px-6 py-2">Service Call</td>
                                <td class="whitespace-nowrap px-6 py-2">@errorHistory.ErrorCodeParameter</td>
                                <td class="whitespace-nowrap px-6 py-2">
                                    @errorHistory.ErrorMessage
                                </td>
                                <td class="whitespace-nowrap px-6 py-2">@errorHistory.DeviceId</td>
                                <td class="whitespace-nowrap px-6 py-2">View</td>
                            </tr>
                        }
                    }
